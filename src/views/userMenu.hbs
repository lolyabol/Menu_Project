<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Мое Меню</title>
</head>
<body>
    <h1>Ваше Меню</h1>
    
    <div id="user-menu-container"></div>

    <script>
      async function fetchUserMenu() {
          try {
              const response = await fetch('/menu/getMenu');
              if (!response.ok) throw new Error(`Ошибка при получении меню:${response.statusText}`);

              const menu = await response.json();
              updateUserMenu(menu);
          } catch (error) {
              console.error("Ошибка:", error);
              alert("Не удалось загрузить ваше меню.");
          }
      }

      function updateUserMenu(menu) {
          const userMenuContainer = document.getElementById('user-menu-container');
          userMenuContainer.innerHTML = '';

          menu.forEach(dish => {
              const card = document.createElement('div');
              card.className = 'dish-card';
              
              card.innerHTML = `
                  <img src="${dish.imageURL}" alt="${dish.name}" style="max-height:100px;width:auto;border-radius=4px;margin-bottom=10px;" />
                  <h3>${dish.name}</h3>
                  <p>Калории:${dish.calories}</p>
                  <p>${dish.description || 'Описание отсутствует.'}</p>
              `;
              
              userMenuContainer.appendChild(card);
          });
      }

      fetchUserMenu(); 
    </script>
</body>
</html>